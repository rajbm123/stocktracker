<%if @user_stocks.count <= 0 %>
	<h2 align="center">You have not added any stocks yet.</h2>
<% else %>	
	<table class="table table-hover animated bounceInLeft">
		<thead>
			<tr class="stock-list">
				<th>Name</th>
				<th>Symbol</th>
				<th>Current price</th>
				<% if @user.id == current_user.id %>
					<th>Action</th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% @user_stocks.each do |user_stock| %>
				<tr class="stock-list-td">
					<td><i class="fa fa-line-chart" aria-hidden="true"></i></i> <%= user_stock.name %></td>
					<td><%= user_stock.ticker %></td>
					<td><%= user_stock.last_price %> </td>
					<% if @user.id == current_user.id %>
						<td>
							<%= link_to 'Delete', user_stock_path(user_stock), method: :delete, data: {confirm: "Are you sure?"},
								class: 'btn btn-xs btn-danger table-btn' %>
						</td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>

